{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "es2017": true,
        "es2020": true
    },
    "globals": {
        "window": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:jsx-a11y/strict",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "."
    },
    "plugins": [
        "@typescript-eslint",
        "jsx-a11y",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": 2
    }
}
